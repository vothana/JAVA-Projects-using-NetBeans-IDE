            <Label fx:id="productName" prefHeight="27.0" prefWidth="153.0" text=" Steak Pork">
               <font>
                  <Font name="System Bold" size="13.0" />
               </font>
               <padding>
                  <Insets left="5.0" />
               </padding>
            </Label>
            <Label fx:id="price" alignment="CENTER" prefHeight="27.0" prefWidth="63.0" text="23$" textFill="#1fda02">
               <font>
                  <Font name="System Bold" size="18.0" />
               </font>
            </Label>
         </children>
      </HBox>
      <ImageView fx:id="imageView" fitHeight="120.0" fitWidth="157.0" layoutX="27.0" layoutY="72.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../images/defaultImage.png" />
         </image>
      </ImageView>
   </children>
   <cursor>
      <Cursor fx:constant="HAND" />
   </cursor>
</AnchorPane>
